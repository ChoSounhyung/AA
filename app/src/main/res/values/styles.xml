<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme.StatusBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--Status Bar 배경색-->
        <item name="android:statusBarColor" tools:targetApi="lollipop">#405FF2</item>
        <!--Status bar 글자 색-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <!-- TabLayout Custom Text -->
    <style name="CustomTabText" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AddDialogTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>

    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_full</item>
        <item name="android:minHeight">32dip</item>
        <item name="android:maxHeight">32dip</item>
    </style>

    <!-- Splash Theme  -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--Status Bar 배경색-->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/main</item>
        <!--Status bar 글자 색-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!--splash.png 적용 -->
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>